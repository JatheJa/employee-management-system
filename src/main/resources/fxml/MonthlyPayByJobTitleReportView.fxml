<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.employeemgmt.view.reports.MonthlyPayByJobTitleReportController">

    <center>
        <VBox spacing="12.0">
            <!-- Outer padding must be an Insets object -->
            <padding>
                <Insets top="15.0" right="15.0" bottom="15.0" left="15.0"/>
            </padding>

            <!-- Title -->
            <Label text="Monthly Pay by Job Title"
                   style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

            <!-- Filters -->
            <TitledPane text="Report Period" expanded="true">
                <content>
                    <GridPane hgap="10.0" vgap="8.0">
                        <padding>
                            <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
                        </padding>
                        <columnConstraints>
                            <ColumnConstraints minWidth="120.0" halignment="RIGHT"/>
                            <ColumnConstraints minWidth="220.0" hgrow="ALWAYS"/>
                            <ColumnConstraints minWidth="120.0" halignment="RIGHT"/>
                            <ColumnConstraints minWidth="220.0" hgrow="ALWAYS"/>
                        </columnConstraints>

                        <children>
                            <Label text="Period Start:"
                                   GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                            <DatePicker fx:id="startDatePicker"
                                        GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                            <Label text="Period End:"
                                   GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                            <DatePicker fx:id="endDatePicker"
                                        GridPane.rowIndex="0" GridPane.columnIndex="3"/>
                        </children>
                    </GridPane>
                </content>
            </TitledPane>

            <!-- Buttons -->
            <HBox spacing="10.0" alignment="CENTER_RIGHT">
                <Button fx:id="runReportButton"
                        text="Run Report"
                        onAction="#handleRunReport"/>
                <Button fx:id="clearButton"
                        text="Clear"
                        onAction="#handleClear"/>
            </HBox>

            <!-- Message area -->
            <Label fx:id="messageLabel"
                   wrapText="true"/>

            <!-- Results table -->
            <TableView fx:id="jobTitleTable" prefHeight="400.0">
                <columns>
                    <TableColumn fx:id="jobTitleColumn"
                                 text="Job Title"
                                 prefWidth="200.0"/>
                    <TableColumn fx:id="totalGrossColumn"
                                 text="Total Gross Pay"
                                 prefWidth="150.0"/>
                    <TableColumn fx:id="totalNetColumn"
                                 text="Total Net Pay"
                                 prefWidth="150.0"/>
                    <TableColumn fx:id="employeeCountColumn"
                                 text="# Employees"
                                 prefWidth="100.0"/>
                </columns>
            </TableView>

            <!-- Totals summary -->
            <Label fx:id="totalsLabel"
                   wrapText="true"
                   style="-fx-font-weight: bold;"/>
        </VBox>
    </center>
</BorderPane>
