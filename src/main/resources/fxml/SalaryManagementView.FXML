<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.employeemgmt.view.payroll.SalaryManagementController">

    <center>
        <VBox spacing="12.0">
            <padding>
                <Insets top="15.0" right="15.0" bottom="15.0" left="15.0"/>
            </padding>

            <!-- Title -->
            <Label text="Salary Management"
                   style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

            <!-- Parameters -->
            <TitledPane text="Salary Adjustment Parameters" expanded="true">
                <content>
                    <GridPane hgap="10.0" vgap="8.0">
                        <padding>
                            <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
                        </padding>

                        <columnConstraints>
                            <ColumnConstraints minWidth="160.0" halignment="RIGHT"/>
                            <ColumnConstraints minWidth="220.0" hgrow="ALWAYS"/>
                        </columnConstraints>

                        <children>
                            <!-- Row 0: Min Salary -->
                            <Label text="Minimum Current Salary:"
                                   GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                            <TextField fx:id="minSalaryField"
                                       promptText="e.g. 40000.00"
                                       GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                            <!-- Row 1: Max Salary -->
                            <Label text="Maximum Current Salary:"
                                   GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                            <TextField fx:id="maxSalaryField"
                                       promptText="e.g. 80000.00"
                                       GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                            <!-- Row 2: Percentage Increase -->
                            <Label text="Percentage Increase (%):"
                                   GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                            <TextField fx:id="percentageField"
                                       promptText="e.g. 3.5"
                                       GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                        </children>
                    </GridPane>
                </content>
            </TitledPane>

            <!-- Buttons -->
            <HBox spacing="10.0" alignment="CENTER_RIGHT">
                <Button fx:id="applyButton"
                        text="Apply Increase"
                        onAction="#handleApplyIncrease"/>

                <Button fx:id="clearButton"
                        text="Clear"
                        onAction="#handleClear"/>
            </HBox>

            <!-- Message area -->
            <Label fx:id="messageLabel"
                   wrapText="true"/>

            <!-- Summary area -->
            <TitledPane text="Update Summary" expanded="true">
                <content>
                    <VBox spacing="6.0">
                        <padding>
                            <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
                        </padding>
                        <Label fx:id="summaryLabel"
                               wrapText="true"/>
                    </VBox>
                </content>
            </TitledPane>

        </VBox>
    </center>
</BorderPane>
